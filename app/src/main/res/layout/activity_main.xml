<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorFondo"
    >


    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTab"
        app:tabIndicatorColor="@color/colorPrimaryDarkBarraNotificaciones"

        >

        <android.support.design.widget.TabItem
            android:id="@+id/tabbienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:icon="@drawable/icono_bienvenida_s"
            />

        <android.support.design.widget.TabItem
            android:id="@+id/tabpiso1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:icon="@drawable/icono_piso1"
            />

        <android.support.design.widget.TabItem
            android:id="@+id/tabpiso2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:icon="@drawable/icono_piso2"
            />

        <android.support.design.widget.TabItem
            android:id="@+id/tabpiso3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:icon="@drawable/icono_piso3"
            />

        <android.support.design.widget.TabItem
            android:id="@+id/tabpiso4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:icon="@drawable/icono_piso4"
            />

        <android.support.design.widget.TabItem
            android:id="@+id/tabextras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:icon="@drawable/icono_extras"
            />


    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ExtraText" />

</LinearLayout>